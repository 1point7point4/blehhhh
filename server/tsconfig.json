{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "./dist",
        "newLine": "lf",
        "allowSyntheticDefaultImports": true,
        "useDefineForClassFields": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "allowJs": true,
        "checkJs": true,
        "strict": true,
        "skipLibCheck": true,
        "allowImportingTsExtensions": true,
        "rewriteRelativeImportExtensions": true
    },
    "include": [
        "src",
        "../shared/src"
    ]
}
