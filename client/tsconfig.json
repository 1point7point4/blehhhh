{
    "compilerOptions": {
        "lib": [
            "DOM",
            "es2022"
        ],
        "target": "es2022",
        "module": "es2022",
        "moduleResolution": "Bundler",
        "outDir": "./dist",
        "newLine": "lf",
        "allowSyntheticDefaultImports": true,
        "useDefineForClassFields": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "allowJs": true,
        "checkJs": true,
        "strict": true,
        "skipLibCheck": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "types": [
            "vite/client"
        ]
    },
    "include": [
        "src",
        "../shared/src"
    ]
}
